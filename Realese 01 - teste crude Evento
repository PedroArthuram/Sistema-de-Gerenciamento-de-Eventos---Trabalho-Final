  <div class="container">

    <!-- CADASTRO -->
    <div class="card">
      <h2>Cadastro e Edi√ß√£o de Eventos</h2>

      <form id="eventForm" data-mode="create">
        <input type="hidden" id="eventId" />

        <label>Nome do Evento*</label>
        <input id="nome" required />

        <label>Data*</label>
        <input id="data" type="date" required />

        <label>Local*</label>
        <input id="local" required />

        <label>Descri√ß√£o</label>
        <textarea id="descricao"></textarea>

        <label>Categoria</label>
        <select id="categoria">
          <option value="">-- selecione --</option>
          <option value="Palestra">Palestra</option>
          <option value="Workshop">Workshop</option>
          <option value="Semin√°rio">Semin√°rio</option>
          <option value="Festival">Festival</option>
        </select>

        <button id="saveBtn" type="button">Salvar Evento</button>
        <button id="clearBtn" type="button">Limpar</button>
      </form>
